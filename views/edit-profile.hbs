<div class="container">
    <div class="columns">
        <div class="column col-3">
            <h1>Edit Profile</h1>

            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/users/profile">Profile</a>
                </li>
                <li class="breadcrumb-item">
                    Edit Profile
                </li>
            </ul>

            {{#if message}}
                <div class="toast toast-primary">
                    <button class="btn btn-clear float-right"></button>
                    <p>{{ message }}</p>
                </div>
            {{/if}}
            <br />
            <form action="../users/{{ user.id }}" method="post">
                <div class="form-group">
                    <label class="form-label" for="name">Login</label>
                    <input class="form-input" id="name" name="name" type="text" value="{{ user.name }}" required="required" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-input" id="email" name="email" type="email" placeholder="Email" value="{{ user.email }}" required="required" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="password">Current Password</label>
                    <input class="form-input" id="password" name="password" type="password" placeholder="Password" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="new-password">New Password</label>
                    <input class="form-input" id="new-password" name="newPassword" type="password" placeholder="New Password" />
                </div>
                <div class="form-group buttons">
                    <input type="hidden" name="userId" value="{{ user.id }}" />
                    <button class="btn btn-primary" type="submit">Save</button>
                    <a class="btn" href="/users/profile">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
